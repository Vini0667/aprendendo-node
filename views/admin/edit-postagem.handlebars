{{#each erros}}
    <div class="alert alert-danger"> {{texto}} </div>
    {{else}}
        
{{/each}}

<h2 class="mt-2"> Editar postagem: </h2>

<div class="card">
    <div class="card-body">
        <form action="/admin/postagens/edit" method="post">
            <input type="hidden" name="id" id="id" value="{{postagens._id}}">
            <label for="titulo"> Titulo: </label>
            <input type="text" class="form-control" name="titulo" id="titulo" placeholder="Coloque o titulo da postagem:"  value="{{postagens.titulo}}" required>

            <label for="slug"> Slug: </label>
            <input class="form-control" type="text" name="slug" id="slug" placeholder="Coloque o Slug da postagem:"  value="{{postagens.slug}}" required>

            <label for="descricao"> Descrição: </label>
            <input class="form-control" type="text" name="descricao" id="descricao" placeholder="Coloque a descrição:"  value="{{postagens.descricao}}" required>

            <label for="conteudo"> Conteúdo: </label>
            <textarea class="form-control" type="text" name="conteudo" id="conteudo" placeholder="Coloque o conteúdo da postagem:" required>{{postagens.conteudo}}</textarea>

            <label for="categoria"> Categoria: </label>
            <select class="form-control custom-select" name="categoria" id="categoria">
                {{#each categorias}}
                    <option value="{{_id}}"> {{nome}} </option>
                    {{else}}
                        <option value="0"> Nenhuma categoria cadastrada </option>
                {{/each}}
            </select>
            <button class="btn btn-primary mt-4" type="submit"> Enviar </button>
        </form>
    </div>
</div>