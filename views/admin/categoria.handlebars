<h2> Lista de categorias </h2>
<hr>
<a href="/admin/categoria/add"><button class="btn btn-primary"> Nova categoria </button></a>

{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4> {{ nome }} </h4>
            <small> {{ slug }} </small>
            <br>
            <a href="/admin/categoria/edit/{{_id}}"><button class="btn btn-warning mt-3"> Editar categoria </button></a>
            <form action="/admin/categoria/deletar" method="post">
                <input type="hidden" name="id" id="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-2"> Deletar </button>
            </form>
        </div>
    </div>
    {{else}}
        <h4 class="mt-4"> Nenhuma categoria registrada </h4>
{{/each}}