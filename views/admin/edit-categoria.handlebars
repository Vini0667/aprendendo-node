{{#each erros}}
    <div class="alert alert-danger"> {{texto}} </div>
    {{else}}
        
{{/each}}

<h2> Nova categoria </h2>
<div class="card">
    <div class="card-body">
        <form action="/admin/categoria/edit" method="post">
            <input type="hidden" name="id" id="id" value="{{categoria._id}}">
            <label for="nome"> Nome: </label>
            <input class="form-control" type="text" name="nome" id="nome" placeholder="Nome da categoria:" value="{{categoria.nome}}">

            <label for="slug"> Slug: </label>
            <input class="form-control" type="text" name="slug" id="slug" placeholder="Slug da categoria:" value="{{categoria.slug}}">
            <br>
            <button type="submit" class="btn btn-primary"> Enviar </button>
        </form>
    </div>
</div>