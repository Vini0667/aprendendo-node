    <div class="alert alert-danger"> {{texto}} </div>
    {{else}}
        
{{/each}}

<h1> Crie sua conta: </h1>

<div class="card">
    <div class="card-body">
        <form action="/usuario/registro" method="post">
            <label for="nome"> Nome: </label>
            <input class="form-control" type="text" name="nome" id="nome" placeholder="Escreva seu nome:" required>

            <label for="email"> Email: </label>
            <input class="form-control" type="text" name="email" id="email" placeholder="Escreva seu email:" required>

            <label for="senha"> Senha: </label>
            <input class="form-control" type="password" name="senha" id="senha" placeholder="Digite sua senha:" required>

            <label for="senha2"> Repita sua Senha: </label>
            <input class="form-control" type="password" name="senha2" id="senha2" placeholder="Digite sua senha novamente:" required>

            <button class="mt-3 btn btn-success" type="submit"> Enviar </button>
        </form>
    </div>
</div>